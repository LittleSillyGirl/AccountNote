<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_iv_top_bg_mine"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_mine_top" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_cir_mine"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@id/id_iv_top_bg_mine"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="55dp"
        android:padding="1dp"
        android:src="@mipmap/head_user_default"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/id_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_cir_mine"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_cir_mine"
        android:padding="3dp"
        android:text="用户名字"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/id_iv_mine_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_iv_top_bg_mine"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/mine_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_rv_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_iv_mine_divider"
        android:layout_marginTop="30dp">

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/id_tv_login_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_edit_reg"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="退出登录"
        android:textColor="@color/commonColor"
        android:textSize="20sp" />


</RelativeLayout>