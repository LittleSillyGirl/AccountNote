<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout style="@style/style_ll_user_reg">


            <ImageView
                style="@style/style_iv_icon"
                android:src="@mipmap/user" />

            <EditText
                android:id="@+id/id_et_user_name"
                style="@style/style_et_user_name_reg"
                android:hint="输入账号" />

        </LinearLayout>

        <LinearLayout style="@style/style_ll_user_reg">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/yzmlog" />

            <EditText
                android:id="@+id/id_et_user_pwd_help"
                style="@style/style_et_user_name_reg"
                android:hint="输入密保" />

        </LinearLayout>

        <LinearLayout style="@style/style_ll_user_reg">


            <ImageView
                style="@style/style_iv_icon"
                android:src="@mipmap/icon_pwd_sure" />

            <EditText
                android:id="@+id/id_et_user_new_pwd"
                style="@style/style_et_user_name_reg"
                android:hint="输入新密码"
                android:inputType="textPassword" />

        </LinearLayout>


        <Button
            android:id="@+id/id_btn_save"
            style="@style/style_btn_login"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_edit_login"
            android:text="重 置"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
